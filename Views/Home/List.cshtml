@using BilgiKutuphanesiWebApp.Data.Models
 @model List<Book>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Book" asp-action="Create">Create new book</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <<th>Kitap Adı</th>
            <th>Kitap Türü</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.BookName</td>
                @*<td>@book.BookType.BookTypeName</td>*@
            </tr>
        }
    </tbody>
</table>